<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Growers.io.Views.WelcomePage"
             Shell.NavBarIsVisible="False"
             Title=" ">
    <VerticalStackLayout>
        <Grid RowDefinitions="*" ColumnDefinitions="*">
            <Image Source="plant.png" HorizontalOptions="Start"></Image>
        </Grid>
        <Label  Text="Growers.io" FontAttributes="Bold" FontSize="46" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,0,0,60"></Label>
        <Button  Text="Log in" Margin="60" Clicked="LogInBtn_Clicked"/>
        <Button x:Name="SignUpBtn" Text="Sign up" Margin="60" Clicked="SignUpBtn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>